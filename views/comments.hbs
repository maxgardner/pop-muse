<!-- Using div row that was opened in main layout -->
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Main</a></li>
    <li class="breadcrumb-item active">Comments</li>
  </ol>
</div>

<div class="row">

{{#unless comments }}
  <div class="col-lg-3 col-sm-12">
    <div class="card card-inverse text-center card-{{ article.class }}">
      <div class="card-block">
        <blockquote class="card-blockquote">
          <h3>{{ article.title }}</h3>
        </blockquote>
      </div>
      <footer class="cd-footer">
        <a href="{{ article.link }}" class="btn btn-md btn-primary" target="_blank">
          Read More
        </a>
      </footer>
    </div>
  </div>

  <div class="col-lg-9 col-sm-12">
    <form>
      <div class="card">
        <div class="card-block">
          <blockquote class="card-blockquote">
            <h6>Be the first to comment</h6>
            <hr />
          </blockquote>

          <div class="form-group">
            <label for="email">Email address</label>
            <input type="email" class="form-control" id="email" />
          </div>
          <div class="form-group">
            <label for="email">Name</label>
            <input type="text" class="form-control" id="name" />
          </div>
          <div class="form-group">
            <label for="email">Comment</label>
            <textarea class="form-control" id="comment"></textarea>
          </div>
          <input type="hidden" id="article-id" value="{{ article._id }}">
          <div class="text-right">
            <button id="submit-comment" type="submit" class="btn btn-primary">Submit Comment</button>
          </div>
        </div>
      </div>
    </form>
  </div>
{{/unless}}

{{#if comments }}
  <div class="col-lg-3">
    <div class="row">
      <div class="card card-inverse text-center card-{{ article.class }}">
        <div class="card-block">
          <blockquote class="card-blockquote">
            <h3>{{ article.title }}</h3>
          </blockquote>
        </div>
        <footer class="cd-footer">
          <a href="{{ article.link }}" class="btn btn-md btn-primary" target="_blank">
            Read More
          </a>
        </footer>
      </div>
    </div>

    <div class="row">
      <form>
        <div class="card">
          <div class="card-block">
            <div class="form-group">
              <label for="email">Email address</label>
              <input type="email" class="form-control" id="email" />
            </div>
            <div class="form-group">
              <label for="email">Name</label>
              <input type="text" class="form-control" id="name" />
            </div>
            <div class="form-group">
              <label for="email">Comment</label>
              <textarea class="form-control" id="comment"></textarea>
            </div>
            <input type="hidden" id="article-id" value="{{ article._id }}">
            <div class="text-right">
              <button id="submit-comment" type="submit" class="btn btn-primary">Submit Comment</button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>

  <div class="col-lg-9">
    <div class="row">

    {{#each comments }}
      <div class="col-lg-6 col-sm-12">
        <div class="card card-outline-{{ ../article.class }}">
          <div class="card-block">
            <blockquote class="card-blockquote">
              <h6>{{ this.author.name }}</h6>
              <p>{{ this.comment }}</p>
            </blockquote>
            <small>{{ this.date }}</small>
          </div>
          <footer id="{{ this._id }}" class="cd-footer footer-padded">
            <div class="text-right">
              <a href="#" data-comment-id="{{ this._id }}" class="initiate-delete">Delete</a>
            </div>
          </footer>
        </div>
      </div>
    {{/each}}
    </div>
  </div>
{{/if}}
